        april.setName("April");
        april.getData().add(new XYChart.Data(squat, 12));
        april.getData().add(new XYChart.Data(bench, 10));
        april.getData().add(new XYChart.Data(deadlift, 13));
        april.getData().add(new XYChart.Data(ohp, 8));
        april.getData().add(new XYChart.Data(militarypress, 9));

        XYChart.Series may = new XYChart.Series();
        may.setName("May");
        may.getData().add(new XYChart.Data(squat, 7));
        may.getData().add(new XYChart.Data(bench, 19));
        may.getData().add(new XYChart.Data(deadlift, 10));
        may.getData().add(new XYChart.Data(ohp, 16));
        may.getData().add(new XYChart.Data(militarypress, 17));

        XYChart.Series june = new XYChart.Series();
        june.setName("June");
        june.getData().add(new XYChart.Data(squat, 14));
        june.getData().add(new XYChart.Data(bench, 13));
        june.getData().add(new XYChart.Data(deadlift, 18));
        june.getData().add(new XYChart.Data(ohp, 11));
        june.getData().add(new XYChart.Data(militarypress, 18));

        barchart.getData().addAll(april, may, june);

        // line chart
        final CategoryAxis xAxis1 = new CategoryAxis();
        final NumberAxis yAxis1 = new NumberAxis();
        final LineChart<String, Number> lineChart
