package fitnessreport;

import javafx.application.Application;
import javafx.geometry.Insets;
import javafx.geometry.Orientation;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.chart.AreaChart;
import javafx.scene.chart.BarChart;
import javafx.scene.chart.CategoryAxis;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.GridPane;
import javafx.scene.layout.HBox;
import javafx.scene.layout.VBox;
import javafx.scene.paint.Color;
import javafx.scene.text.Font;
import javafx.scene.text.FontPosture;
import javafx.scene.text.FontWeight;
import javafx.scene.text.Text;
import javafx.stage.Stage;
import javafx.scene.chart.LineChart;
import javafx.scene.chart.NumberAxis;
import javafx.scene.chart.XYChart;
import javafx.scene.control.ScrollBar;
import javafx.scene.control.ScrollPane;
import javafx.scene.layout.BorderPane;

/**
 *
 * @author ShumPC
 */
public class Fitnessreport extends Application {

    public static void main(String[] args) {
        launch(args);
    }

    // fill colors for GUI
    private static final Color COLOR_EMPTY = Color.rgb(238, 228, 2);
    private static final Color COLOR_2 = Color.rgb(255, 202, 195);

    // string list for bar chart
    final static String squat = "Squat";
    final static String bench = "Bench";
    final static String deadlift = "Deadlift";
    final static String ohp = "Overhead Press";
    final static String militarypress = "Military Press";
    
    // create scrollBar
    final ScrollBar sc = new ScrollBar();

    @Override
    public void start(Stage primaryStage) {

        // set title
        primaryStage.setTitle("Fitness Report");

        // root element
        VBox rootPane = new VBox();
        
        // add scroll bar
        //ScrollBar s1 = new ScrollBar();
        //s1.setOrientation(Orientation.VERTICAL);
 
        // set grid pane (navigation)
        GridPane navigationbar = new GridPane();
        navigationbar.setHgap(10);
        navigationbar.setVgap(0);

        // set grid pane (fitness analysis + comments)
        GridPane grid = new GridPane();
        grid.setAlignment(Pos.CENTER);
        grid.setHgap(5);
        grid.setVgap(5);
        grid.setPadding(new Insets(20, 20, 20, 20));

        // navigation grid - buttons
        Button homeBar = new Button("Home");
        homeBar.setAlignment(Pos.TOP_LEFT);
        navigationbar.add(homeBar, 10, 1);
        homeBar.setStyle("-fx-background-color: transparent;");

        Button monthlyReport = new Button("Monthly Report");
        monthlyReport.setAlignment(Pos.TOP_CENTER);
        navigationbar.add(monthlyReport, 40, 1);
        monthlyReport.setStyle("-fx-background-color: transparent;");
        
        Button myProfile = new Button("My Profile");
        myProfile.setAlignment(Pos.TOP_RIGHT);
        navigationbar.add(myProfile, 65, 1);
        myProfile.setStyle("-fx-background-color: transparent;");

        // change navigation background color
        navigationbar.setStyle("-fx-background-color: gold;");

        // labels & fields
        // section 1: Overall Health
        Text welcome = new Text("Welcome");
        welcome.setFont(Font.font("Arial", FontWeight.BOLD,
                FontPosture.REGULAR, 25));
        grid.add(welcome, 0, 0, 1, 1);

        Text overallHealthTitle = new Text("Overall Health");
        overallHealthTitle.setId("welcome-text");
        overallHealthTitle.setFont(Font.font("Arial", FontWeight.BOLD,
                FontPosture.REGULAR, 14));
        grid.add(overallHealthTitle, 0, 1, 2, 1);

        Label sleep = new Label("Sleep (hours/week)");
        grid.add(sleep, 0, 2);

        TextField userTextField = new TextField();
        grid.add(userTextField, 1, 2);

        Label exercise = new Label("Exercise (steps/week)");
        grid.add(exercise, 0, 3);

        TextField pwBox = new TextField();
        grid.add(pwBox, 1, 3);

        Label foodCondition = new Label("Food Condition (calories/week)");
        grid.add(foodCondition, 0, 4);

        TextField foodConditionBox = new TextField();
        grid.add(foodConditionBox, 1, 4);
        
        // assess button
        Button btn = new Button("Assess");
        HBox assess = new HBox(10);
        assess.setAlignment(Pos.BOTTOM_RIGHT);
        assess.getChildren().add(btn);
        grid.add(assess, 1, 5);

        // section 2: Expert Comments
        Text expertTitle = new Text("Expert Comments");
        expertTitle.setId("comments-text");
        expertTitle.setFont(Font.font("Arial", FontWeight.BOLD,
