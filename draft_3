        // important Root element for BorderPane
        //rootPane.setLeft(grid);
        //rootPane.setRight(bc);
        //rootPane.setRight(lineChart);
        // show the stage   
        Scene scene = new Scene(rootPane, 1000, 1200);
        primaryStage.setScene(scene);
        primaryStage.show();
