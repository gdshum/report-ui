        lineChart.setTitle("Overall Health Peformance, 2019");
        yAxis1.setLabel("Frequency");

        XYChart.Series sleep1 = new XYChart.Series();
        sleep1.setName("Sleep");

        sleep1.getData().add(new XYChart.Data("Jan", 23));
        sleep1.getData().add(new XYChart.Data("Feb", 26));
        sleep1.getData().add(new XYChart.Data("Mar", 28));
        sleep1.getData().add(new XYChart.Data("Apr", 30));
        sleep1.getData().add(new XYChart.Data("May", 35));
        sleep1.getData().add(new XYChart.Data("Jun", 38));
        sleep1.getData().add(new XYChart.Data("Jul", 42));
        sleep1.getData().add(new XYChart.Data("Aug", 40));
        sleep1.getData().add(new XYChart.Data("Sep", 46));
        sleep1.getData().add(new XYChart.Data("Oct", 50));
        sleep1.getData().add(new XYChart.Data("Nov", 55));
        sleep1.getData().add(new XYChart.Data("Dec", 57));

        XYChart.Series exercise1 = new XYChart.Series();
        exercise1.setName("Exercise");
        exercise1.getData().add(new XYChart.Data("Jan", 15));
        exercise1.getData().add(new XYChart.Data("Feb", 20));
        exercise1.getData().add(new XYChart.Data("Mar", 34));
        exercise1.getData().add(new XYChart.Data("Apr", 27));
        exercise1.getData().add(new XYChart.Data("May", 26));
        exercise1.getData().add(new XYChart.Data("Jun", 30));
        exercise1.getData().add(new XYChart.Data("Jul", 32));
        exercise1.getData().add(new XYChart.Data("Aug", 35));
        exercise1.getData().add(new XYChart.Data("Sep", 40));
        exercise1.getData().add(new XYChart.Data("Oct", 42));
        exercise1.getData().add(new XYChart.Data("Nov", 44));
        exercise1.getData().add(new XYChart.Data("Dec", 42));

        XYChart.Series foodcondition1 = new XYChart.Series();
        foodcondition1.setName("Food Condition");
        foodcondition1.getData().add(new XYChart.Data("Jan", 35));
        foodcondition1.getData().add(new XYChart.Data("Feb", 35));
        foodcondition1.getData().add(new XYChart.Data("Mar", 36));
        foodcondition1.getData().add(new XYChart.Data("Apr", 33));
        foodcondition1.getData().add(new XYChart.Data("May", 31));
        foodcondition1.getData().add(new XYChart.Data("Jun", 26));
        foodcondition1.getData().add(new XYChart.Data("Jul", 22));
        foodcondition1.getData().add(new XYChart.Data("Aug", 25));
        foodcondition1.getData().add(new XYChart.Data("Sep", 43));
        foodcondition1.getData().add(new XYChart.Data("Oct", 44));
        foodcondition1.getData().add(new XYChart.Data("Nov", 45));
        foodcondition1.getData().add(new XYChart.Data("Dec", 44));

        lineChart.getData().addAll(sleep1, exercise1, foodcondition1);
        
        // chart 3
        final NumberAxis xAxis2 = new NumberAxis(1, 30, 1);
        final NumberAxis yAxis2 = new NumberAxis();
        final AreaChart<Number,Number> areaChart = 
            new AreaChart<Number,Number>(xAxis2,yAxis2);
        areaChart.setTitle("Benchmarking Actual vs Goals "
                + "(average step in a month)");
        
        xAxis2.setLabel("Days");
        yAxis2.setLabel("Steps");

        XYChart.Series actual2 = new XYChart.Series();
        actual2.setName("Steps Per Month");

        XYChart.Series seriesJanuary= new XYChart.Series();
        seriesJanuary.setName("Actual");
        seriesJanuary.getData().add(new XYChart.Data(1, 4000));
        seriesJanuary.getData().add(new XYChart.Data(2, 10000));
        seriesJanuary.getData().add(new XYChart.Data(5, 15000));
        seriesJanuary.getData().add(new XYChart.Data(8, 8000));
        seriesJanuary.getData().add(new XYChart.Data(11, 5000));
        seriesJanuary.getData().add(new XYChart.Data(14, 18000));
        seriesJanuary.getData().add(new XYChart.Data(17, 15000));
        seriesJanuary.getData().add(new XYChart.Data(23, 13000));
        seriesJanuary.getData().add(new XYChart.Data(24, 19000));
        seriesJanuary.getData().add(new XYChart.Data(25, 21000));
        seriesJanuary.getData().add(new XYChart.Data(30, 21000));
        
        XYChart.Series seriesFebruary = new XYChart.Series();
        seriesFebruary.setName("Goals");
        seriesFebruary.getData().add(new XYChart.Data(1, 14000));
        seriesFebruary.getData().add(new XYChart.Data(3, 17000));
        seriesFebruary.getData().add(new XYChart.Data(6, 17000));
        seriesFebruary.getData().add(new XYChart.Data(10, 13000));
        seriesFebruary.getData().add(new XYChart.Data(12, 15000));
        seriesFebruary.getData().add(new XYChart.Data(16, 17000));
        seriesFebruary.getData().add(new XYChart.Data(18, 22000));
        seriesFebruary.getData().add(new XYChart.Data(20, 2300));
        seriesFebruary.getData().add(new XYChart.Data(22, 24000));
        seriesFebruary.getData().add(new XYChart.Data(26, 26000));
        seriesFebruary.getData().add(new XYChart.Data(30, 27000));

        areaChart.getData().addAll(seriesJanuary, seriesFebruary);

        //important Root element for VBox
        rootPane.getChildren().addAll(navigationbar, grid, barchart, lineChart, 
